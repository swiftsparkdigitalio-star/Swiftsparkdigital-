    // small utilities
    document.getElementById('year').textContent = new Date().getFullYear();
    // If you want to remove cookie bar permanently, store consent in localStorage (simple)
    if(localStorage.getItem('swiftspark_cookie_accepted')) {
      document.getElementById('cookie').style.display = 'none';
    } else {
      document.querySelector('.cookie button').addEventListener('click', function(){
        localStorage.setItem('swiftspark_cookie_accepted', '1');
      });
